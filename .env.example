# Telegram Bot Token (required)
# Get it from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# PostgreSQL Database URL (required for Vercel)
POSTGRES_URL=postgresql://user:password@host:port/database

# Webhook URL (required for Vercel)
WEBHOOK_URL=https://your-vercel-app.vercel.app/api/webhook

# AI Assistant Configuration (optional)
# URL for external AI assistant API
AI_ASSISTANT_URL=https://your-ai-assistant-api.com/v1/chat

# Default Model Settings (optional)
# These can be changed through the bot's settings menu
DEFAULT_TEXT_MODEL=gpt-3.5-turbo
DEFAULT_IMAGE_MODEL=dall-e-3
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000 